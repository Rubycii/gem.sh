<div class="grid grid-cols-2 lg:grid-cols-3 xl:grid-cols-4 gap-4 md:gap-8 mb-6">
  <div class="bg-gray-50 rounded p-3 text-center border justify-center flex-col flex">
    <p class="excerpt metadata_headers">Version</p>
    <p><%= @gem.version %></p>
  </div>

  <div class="bg-gray-50 rounded p-3 text-center border justify-center flex-col flex">
    <p class="excerpt metadata_headers">Authors</p>
    <p><%= @gem.metadata.authors.to_sentence %></p>
  </div>

  <div class="bg-gray-50 rounded p-3 text-center border justify-center flex-col flex">
    <p class="excerpt metadata_headers">Runtime Dependencies</p>
    <p>
      <% deps = @gem.metadata.dependencies %>

      <% deps.each do |dep| %>
        <span class="font-mono"><%= link_to(dep.name, gem_path(dep.name)) %></span><% if deps.last != dep %>, <% end %>
      <% end %>

      <% if deps.none? %>- <% end %>
    </p>
  </div>

  <div class="bg-gray-50 rounded p-3 text-center border justify-center flex-col flex">
    <ul role="list" class="grid md:grid-cols-2 gap-y-4">
      <li class="relative flex items-center justify-center">
        <div class="flex items-center gap-x-3">
          <%= render Layout::Status.new(status: @gem.files.select { |file| file.end_with?(".rbs") }.any? ? :green : :default) %>
          <div class="rounded-md bg-white px-2.5 py-1 text-xs font-semibold text-gray-900 ring-1 ring-inset ring-gray-300 w-20">Types</div>
        </div>
      </li>
      <li class="relative flex items-center justify-center">
        <div class="flex items-center gap-x-3">
          <%= render Layout::Status.new(status: @gem.metadata.dependencies.map(&:name).include?("zeitwerk") ? :green : :default) %>
          <div class="rounded-md bg-white px-2.5 py-1 text-xs font-semibold text-gray-900 ring-1 ring-inset ring-gray-300 w-20">Zeitwerk</div>
        </div>
      </li>
      <li class="relative flex items-center justify-center">
        <div class="flex items-center gap-x-3">
          <%= render Layout::Status.new(status: @gem.info.markdown_files.count > 2 ? :green : :default) %>
          <div class="rounded-md bg-white px-2.5 py-1 text-xs font-semibold text-gray-900 ring-1 ring-inset ring-gray-300 w-20">Docs</div>
        </div>
      </li>
      <li class="relative flex items-center justify-center">
        <div class="flex items-center gap-x-3">
          <%= render Layout::Status.new(status: :default) %>
          <div class="rounded-md bg-white px-2.5 py-1 text-xs font-semibold text-gray-900 ring-1 ring-inset ring-gray-300 w-20">Guides</div>
        </div>
      </li>
    </ul>
  </div>

  <div class="bg-gray-50 rounded p-3 text-center border justify-center flex-col flex">
    <p class="excerpt metadata_headers">Quick Start</p>
    <pre class="small-code-thing">bundle add <%= @gem.name %></pre>
  </div>
</div>
