<aside class="block truncate col-span-1 mb-12">
  <%= render Layout::Subheading.new(title: "Classes") %>

  <ul class="list code mb-12">
    <% @classes.each do |klass| %>
      <li>
        <code>
          <%= link_to klass.name, gem_class_path(@gem.name, @gem.version, klass.qualified_name) %>

          <% if klass.namespace.present? && false %>
            <span class="text-gray-400 hover:text-blue-300">
              (<%= link_to klass.qualified_name, gem_module_path(@gem.name, @gem.version, klass.namespace) %>)
            </span>
          <% end %>
        </code>
      </li>
    <% end %>
  </ul>
</aside>
