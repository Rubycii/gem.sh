<div class="p-3 h-full border border-gray-200 hover:bg-gray-50 hover:border-gray-300 rounded-lg flex flex-col justify-between">
  <div class="divide-y divide-gray-100">
    <div class="text-sm font-semibold text-gray-800 mb-2 flex justify-between">
      <pre><%= @title %></pre>

      <% if @label %>
        <div class="rounded-md py-1 px-2 text-xs font-medium ring-1 ring-inset text-gray-700 bg-gray-50 ring-gray-600/10">
          <%= @label %>
        </div>
      <% end %>
    </div>

    <p class="py-1 text-gray-500 text-sm truncate"><%= @description %></p>
  </div>
</div>
