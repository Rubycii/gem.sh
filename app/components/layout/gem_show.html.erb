<div class="grid grid-cols-1 md:grid-cols-4 gap-12">
  <div class="col-span-1 md:col-span-3">
    <%= render partial: "breadcrumb" %>

    <%= render Layout::GemHeading.new(title: @gem.name) %>

    <%= render GemMetadata.new(gem: @gem) %>

    <%= render partial: "gem_navigation" %>

    <main>
      <%= content %>
    </main>
  </div>

  <div class="col-span-1">
    <%= render ModulesList.new(modules: @namespaces, gem: @gem, title: "Top-Level Modules") if @namespaces.any? %>
    <%= render ClassesList.new(classes: @classes, gem: @gem) if @classes.any? %>
    <%= render MethodsList.new(methods: @class_methods, gem: @gem, prefix: "Class") if @class_methods.any? %>
    <%= render MethodsList.new(methods: @instance_methods, gem: @gem, prefix: "Instance") if @instance_methods.any? %>

    <%#= render ConstantDefinition.new(definition: object.superclass, gem: @gem) %>
    <%#= render ModulesList.new(modules: object.included_modules, title: "Included Modules", gem: @gem) %>
    <%#= render ModulesList.new(modules: object.extended_modules, title: "Extended Modules", gem: @gem) %>
  </div>
</div>
