<%= render Layout::GemShow.new(gem: @gem, namespaces: @namespaces, classes: @gem.classes, class_methods: @gem.class_methods, instance_methods: @gem.instance_methods) do %>
  <div class="pb-5 flex justify-between">
    <%= render Layout::Subheading.new(title: "Source Files") %>
  </div><hr>

  <div class="mt-12 block truncate col-span-1">
    <ul class="list code mb-12">
    <% @gem.info.files.sort.each do |file| %>
      <%= link_to gem_path(@gem.name) do %>
        <li><%= file %></li>
      <% end %>
    <% end %>
    </ul>
  </div>
<% end %>
