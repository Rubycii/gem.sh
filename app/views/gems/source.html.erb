<%= render Layout::GemShow.new(gem: @gem, namespaces: @namespaces, classes: @classes, class_methods: @class_methods, instance_methods: @instance_methods) do %>
  <div class="block truncate col-span-1">
    <%= render Layout::Subheading.new(title: "Files") %>

    <% @gem.info.files.sort.each do |file| %>
      <%= link_to gem_path(@gem.name) do %>
        <pre><%= file %></pre>
      <% end %>
    <% end %>
  </div>
<% end %>
