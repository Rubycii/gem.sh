<%= render Gems::Wrapper.new(gem: @gem, modules: @gem.top_level_modules, classes: @gem.classes, class_methods: @gem.class_methods, instance_methods: @gem.instance_methods) do %>
  <div class="pb-5 flex justify-between">
    <%= render UI::Subheading.new(title: "Generated RBS files") %>
  </div><hr>

  <div class="mt-6 grid md:grid-cols-2 gap-3 max-w-3xl">
    <%= link_to "RBS file (complete)", gem_rbs_path(@gem.name, @gem.version), target: "_blank", class: "text-sm font-regular py-3 px-4 bg-red-500 rounded-md text-white hover:bg-red-400" %>
    <%= link_to "RBS file (only methods with samples)", gem_rbs_path(@gem.name, @gem.version, require_samples: 1), target: "_blank", class: "text-sm font-regular py-3 px-4 bg-red-500 rounded-md text-white hover:bg-red-400" %>

    <%= link_to "Download RBS file (complete)", gem_rbs_path(@gem.name, @gem.version, download: 1), target: "_blank", class: "text-sm font-regular py-3 px-4 bg-red-500 rounded-md text-white hover:bg-red-400" %>
    <%= link_to "Download RBS file (only methods with samples)", gem_rbs_path(@gem.name, @gem.version, download: 1, require_samples: 1), target: "_blank", class: "text-sm font-regular py-3 px-4 bg-red-500 rounded-md text-white hover:bg-red-400" %>
  </div>

  <div class="pb-5 flex justify-between mt-12">
    <%= render UI::Subheading.new(title: "Methods With Samples") %>
  </div><hr>

  <div class="mx-auto mt-6">
    <div class="grid grid-cols-2 md:grid-cols-3 lg:grid-cols-4 gap-4">
      <% @samples.each do |(name, version, receiver, method_name), count| %>
        <% namespace = @gem.find_namespace(receiver) %>
        <% method = namespace ? namespace.find_method(method_name) : nil %>

        <% if namespace.nil? || method.nil? %>
          <%= render UI::Card.new(title: method_name, description: receiver) do |card| %>
            <%= card.with_badge(label: pluralize(count, "sample"), style: :red) %>
          <% end %>
        <% else %>

          <%= link_to method.url(@gem), class: "block w-full" do %>
            <%= render UI::Card.new(title: method_name, description: receiver) do |card| %>
              <%= card.with_badge(label: pluralize(count, "sample"), style: :green) %>
            <% end %>
          <% end %>

        <% end %>
      <% end %>

      <% if @samples.none? %>
        No type samples received yet.
      <% end %>
    </div>
  </div>
<% end %>
