<div class="">
  <%= render partial: "breadcrumb" %>

  <div class="grid grid-cols-5 gap-x-8">
    <%= render Superclass.new(superclass: @klass.superclass, gem: @gem) %>
    <%= render ModulesList.new(modules: @klass.included_modules, title: "Included Modules", gem: @gem) %>
    <%= render ModulesList.new(modules: @klass.extended_modules, title: "Extended Modules", gem: @gem) %>
    <%= render ClassMethodsList.new(class_methods: @klass.class_methods, gem: @gem) %>
    <%= render InstanceMethodsList.new(instance_methods: @klass.instance_methods, gem: @gem) %>
  </div>

  <% comment = @klass.comments.map { |comment| comment.value.delete_prefix("#").strip+"\n\n" }.join("\n") %>

  <% h = RDoc::Markup::ToHtml.new(RDoc::Options.new) %>
  <%== h.convert(comment) %>
</div>
