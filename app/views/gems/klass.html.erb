<div class="mx-auto w-full items-start px-4 py-10 sm:px-6 lg:px-8">
  <%= render partial: "breadcrumb" %>

  <div class="grid grid-cols-5 gap-x-8">
    <aside class="block truncate col-span-1">
      <div class="border-b border-gray-200 pb-5 mb-6">
        <h3 class="text-base font-semibold leading-6 text-gray-900">Parent Class</h3>
      </div>
    </aside>

    <aside class="block truncate col-span-1">
      <div class="border-b border-gray-200 pb-5 mb-6">
        <h3 class="text-base font-semibold leading-6 text-gray-900">Included Modules</h3>
      </div>
    </aside>

    <aside class="block truncate col-span-1">
      <div class="border-b border-gray-200 pb-5 mb-6">
        <h3 class="text-base font-semibold leading-6 text-gray-900">Extended Modules</h3>
      </div>
    </aside>

    <aside class="block truncate col-span-1">
      <div class="border-b border-gray-200 pb-5 mb-6">
        <h3 class="text-base font-semibold leading-6 text-gray-900">Class Methods</h3>
      </div>

      <% @klass.class_methods.each do |class_method| %>
        <pre><%= link_to class_method.name, class_method.url(@gem.name) %></pre>
      <% end %>
    </aside>

    <aside class="block truncate col-span-1">
      <div class="border-b border-gray-200 pb-5 mb-6">
        <h3 class="text-base font-semibold leading-6 text-gray-900">Instance Methods</h3>
      </div>

      <% @klass.instance_methods.each do |instance_method| %>
        <pre><%= link_to instance_method.name, instance_method.url(@gem.name) %></pre>
      <% end %>
    </aside>
  </div>
</div>
