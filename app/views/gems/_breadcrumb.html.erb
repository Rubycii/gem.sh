<nav class="flex mb-12" aria-label="Breadcrumb">
  <ol role="list" class="flex items-center space-x-4">
    <li>
      <div class="flex items-center">
        <%= link_to gem_path(@gem.name), class: "text-sm font-medium text-gray-500 hover:text-gray-700" do %>
          <pre><%= @gem.name %></pre>
        <% end %>
      </div>
    </li>

    <% if @namespace %>
      <li>
        <div class="flex items-center">
          <svg class="h-5 w-5 flex-shrink-0 text-gray-400" viewBox="0 0 20 20" fill="currentColor" aria-hidden="true">
            <path fill-rule="evenodd" d="M7.21 14.77a.75.75 0 01.02-1.06L11.168 10 7.23 6.29a.75.75 0 111.04-1.08l4.5 4.25a.75.75 0 010 1.08l-4.5 4.25a.75.75 0 01-1.06-.02z" clip-rule="evenodd" />
          </svg>

          <%= link_to gem_namespace_path(@gem.name, @namespace.qualified_name), class: "ml-4 text-sm font-medium text-gray-500 hover:text-gray-700" do %>
            <pre><%= @namespace.object_name %> <%= @namespace.qualified_name %></pre>
          <% end %>
        </div>
      </li>
    <% end %>

    <% if @klass %>
      <li>
        <div class="flex items-center">
          <svg class="h-5 w-5 flex-shrink-0 text-gray-400" viewBox="0 0 20 20" fill="currentColor" aria-hidden="true">
            <path fill-rule="evenodd" d="M7.21 14.77a.75.75 0 01.02-1.06L11.168 10 7.23 6.29a.75.75 0 111.04-1.08l4.5 4.25a.75.75 0 010 1.08l-4.5 4.25a.75.75 0 01-1.06-.02z" clip-rule="evenodd" />
          </svg>
          <%= link_to gem_class_path(@gem.name, @klass.qualified_name), class: "ml-4 text-sm font-medium text-gray-500 hover:text-gray-700" do %>
            <pre><%= @klass.object_name %> <%= @klass.qualified_name %></pre>
          <% end %>
        </div>
      </li>
    <% end %>

    <% if @instance_method %>
      <li>
        <div class="flex items-center">
          <svg class="h-5 w-5 flex-shrink-0 text-gray-400" viewBox="0 0 20 20" fill="currentColor" aria-hidden="true">
            <path fill-rule="evenodd" d="M7.21 14.77a.75.75 0 01.02-1.06L11.168 10 7.23 6.29a.75.75 0 111.04-1.08l4.5 4.25a.75.75 0 010 1.08l-4.5 4.25a.75.75 0 01-1.06-.02z" clip-rule="evenodd" />
          </svg>
          <%= link_to gem_instance_method_path(@gem.name, @klass.qualified_name, @instance_method.name), class: "ml-4 text-sm font-medium text-gray-500 hover:text-gray-700" do %>
            <pre><%= @instance_method.object_name %> <%= @instance_method.name %></pre>
          <% end %>
        </div>
      </li>
    <% end %>
  </ol>
</nav>
