<div class="grid grid-cols-4 gap-12">
  <div class="col-span-3">
    <%= render partial: "breadcrumb" %>

    <%= render Layout::Heading.new(title: @gem.name) %>

    <%= render GemMetadata.new(gem: @gem) %>

    <%= render partial: "gem_navigation" %>

    <%= render Layout::Subheading.new(title: "Featured Classes") %>

    <div class="grid grid-cols-4 gap-8">
      <% @gem.classes.sample(8).each do |klass| %>
        <%= link_to gem_class_path(@gem.name, @gem.version, klass.qualified_name) do %>
          <%= render Layout::Card.new(title: klass.name, description: klass.namespace, label: klass.object_name) %>
        <% end %>
      <% end %>
    </div>

    <div class="grid grid-cols-4 gap-x-8">
      <% if false %>
        <aside class="block truncate col-span-1">
          <%= render Layout::Subheading.new(title: "Files") %>

          <% @gem.info.files.sort.each do |file| %>
            <%= link_to gem_path(@gem.name) do %>
              <pre><%= file %></pre>
            <% end %>
          <% end %>
        </aside>
      <% end %>

      <% if false %>
        <main class="flex-1 col-span-1">
          <%= render Layout::Subheading.new(title: @gem.metadata.name) %>

          <div class="mt-6 border-t border-gray-100">
            <dl class="divide-y divide-gray-100">
              <% @gem.metadata.instance_variables.each do |var| %>
                <% value = @gem.metadata.instance_variable_get(var) %>
                <% next if value.blank? %>

                <div class="px-4 py-6 sm:grid sm:grid-cols-3 sm:gap-4 sm:px-0">
                  <dt class="text-sm font-medium leading-6 text-gray-900">
                    <%= var.to_s.gsub("@", "").humanize %>
                  </dt>

                  <dd class="mt-1 text-sm leading-6 text-gray-700 sm:col-span-2 sm:mt-0">
                    <%= value.to_s %>
                  </dd>
                </div>
              <% end %>
            </dl>
          </div>
        </main>
      <% end %>
    </div>
  </div>

  <div class="col-span-1">
    <%= render ModulesList.new(modules: @namespaces, gem: @gem) %>
    <%= render ClassesList.new(classes: @classes, gem: @gem) %>
    <%= render ClassMethodsList.new(class_methods: @class_methods, gem: @gem) %>
    <%= render InstanceMethodsList.new(instance_methods: @instance_methods, gem: @gem) %>

    <%#= render Superclass.new(superclass: object.superclass, gem: @gem) %>
    <%#= render ModulesList.new(modules: object.included_modules, title: "Included Modules", gem: @gem) %>
    <%#= render ModulesList.new(modules: object.extended_modules, title: "Extended Modules", gem: @gem) %>
  </div>
</div>
