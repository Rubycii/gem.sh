<div class="">
  <%= render partial: "breadcrumb" %>

  <%= render Layout::Heading.new(title: @gem.name) %>

  <%= render GemMetadata.new(gem: @gem) %>

  <div class="grid grid-cols-4 gap-x-8">
    <% if false %>
      <aside class="block truncate col-span-1">
        <%= render Layout::Subheading.new(title: "Files") %>

        <% @gem.info.files.sort.each do |file| %>
          <%= link_to gem_path(@gem.name) do %>
            <pre><%= file %></pre>
          <% end %>
        <% end %>
      </aside>
    <% end %>

    <aside class="block truncate col-span-1">
      <%= render Layout::Subheading.new(title: "Modules") %>

      <ul class="list code">
        <% @namespaces.each do |namespace| %>
          <li><%= link_to namespace.qualified_name, gem_module_path(@gem.name, @version, namespace.qualified_name) %></li>
        <% end %>
      </ul>
    </aside>

    <aside class="block truncate col-span-1">
      <%= render Layout::Subheading.new(title: "Classes") %>

      <ul class="list code">
      <% @classes.each do |klass| %>
        <li>
          <%= link_to klass.name, gem_class_path(@gem.name, @version, klass.qualified_name) %>

          <% if klass.namespace.present? %>
            <span class="text-gray-400 hover:text-blue-300">
              (<%= link_to klass.qualified_name, gem_module_path(@gem.name, @version, klass.namespace) %>)
            </span>
          <% end %>

        </li>
      <% end %>
      </ul>
    </aside>

    <%= render ClassMethodsList.new(class_methods: @class_methods, gem: @gem) %>
    <%= render InstanceMethodsList.new(instance_methods: @instance_methods, gem: @gem) %>

    <% if false %>
      <main class="flex-1 col-span-1">
        <%= render Layout::Subheading.new(title: @gem.metadata.name) %>

        <div class="mt-6 border-t border-gray-100">
          <dl class="divide-y divide-gray-100">
            <% @gem.metadata.instance_variables.each do |var| %>
              <% value = @gem.metadata.instance_variable_get(var) %>
              <% next if value.blank? %>

              <div class="px-4 py-6 sm:grid sm:grid-cols-3 sm:gap-4 sm:px-0">
                <dt class="text-sm font-medium leading-6 text-gray-900">
                  <%= var.to_s.gsub("@", "").humanize %>
                </dt>

                <dd class="mt-1 text-sm leading-6 text-gray-700 sm:col-span-2 sm:mt-0">
                  <%= value.to_s %>
                </dd>
              </div>
            <% end %>
          </dl>
        </div>
      </main>
    <% end %>
  </div>
</div>
