<div class="">
  <%= render partial: "breadcrumb" %>

  <div class="grid grid-cols-4 gap-x-8">
    <% if false %>
      <aside class="block truncate col-span-1">
        <div class="border-b border-gray-200 pb-5 mb-6">
          <h3 class="text-base font-semibold leading-6 text-gray-900">Files</h3>
        </div>

        <% @gem.info.files.sort.each do |file| %>
          <%= link_to gem_path(@gem.name) do %>
            <pre><%= file %></pre>
          <% end %>
        <% end %>
      </aside>
    <% end %>

    <aside class="block truncate col-span-1">
      <div class="border-b border-gray-200 pb-5 mb-6">
        <h3 class="text-base font-semibold leading-6 text-gray-900">Modules</h3>
      </div>

      <% @namespaces.each do |namespace| %>
        <pre><%= link_to namespace.qualified_name, gem_namespace_path(@gem.name, namespace.qualified_name) %></pre>
      <% end %>
    </aside>

    <aside class="block truncate col-span-1">
      <div class="border-b border-gray-200 pb-5 mb-6">
        <h3 class="text-base font-semibold leading-6 text-gray-900">Classes</h3>
      </div>

      <% @classes.each do |klass| %>
        <code>
          <%= link_to klass.name, gem_class_path(@gem.name, klass.qualified_name) %>

          <% if klass.namespace.present? %>
            <span class="text-gray-400 hover:text-blue-300">
              (<%= link_to klass.namespace, gem_namespace_path(@gem.name, klass.namespace) %>)
            </span>
          <% end %>

        </code><br/>
      <% end %>
    </aside>

    <%= render ClassMethodsList.new(class_methods: @class_methods, gem: @gem.name) %>
    <%= render InstanceMethodsList.new(instance_methods: @instance_methods, gem: @gem.name) %>

    <% if false %>
      <main class="flex-1 col-span-1">
        <div class="border-b border-gray-200 pb-5 mb-6">
          <h3 class="text-base font-semibold leading-6 text-gray-900">
            <pre><%= @gem.metadata.name %></pre>
          </h3>
        </div>

        <div class="mt-6 border-t border-gray-100">
          <dl class="divide-y divide-gray-100">
            <% @gem.metadata.instance_variables.each do |var| %>
              <% value = @gem.metadata.instance_variable_get(var) %>
              <% next if value.blank? %>

              <div class="px-4 py-6 sm:grid sm:grid-cols-3 sm:gap-4 sm:px-0">
                <dt class="text-sm font-medium leading-6 text-gray-900">
                  <%= var.to_s.gsub("@", "").humanize %>
                </dt>

                <dd class="mt-1 text-sm leading-6 text-gray-700 sm:col-span-2 sm:mt-0">
                  <%= value.to_s %>
                </dd>
              </div>
            <% end %>
          </dl>
        </div>
      </main>
    <% end %>
  </div>
</div>
