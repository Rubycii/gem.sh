<div class="border-b border-gray-200 pb-5">
  <h3 class="text-base font-semibold leading-6 text-gray-900">Gems</h3>
</div>

<%= render partial: "gems/search" %>

<div class="mx-auto mt-6">
  <div class="grid grid-cols-2 md:grid-cols-3 lg:grid-cols-4 gap-4">
    <% @gems.each do |gem| %>
      <%= link_to gem_version_path(gem.name, gem.version), class: "block w-full" do %>
        <%= render Layout::Card.new(title: gem.name, description: gem.description.to_s.truncate(50), label: gem.version) %>
      <% end %>
    <% end %>
  </div>
</div>
