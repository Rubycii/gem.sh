<div class="mt-12 border-b border-gray-200 pb-5">
  <h3 class="text-base font-semibold leading-6 text-gray-900">Gems</h3>
</div>

<div class="max-w-screen-xl mx-auto mt-12">
  <div class="grid grid-cols-2 md:grid-cols-3 lg:grid-cols-4 gap-4">
    <% @gems.each do |gem| %>
      <div class="block w-full">
        <div class="p-3 h-full border border-gray-300 dark:border-gray-700 rounded flex flex-col justify-between">
          <div>
            <h2 class="text-xl font-semibold text-gray-800 dark:text-gray-200"><%= gem.name %></h2>
            <p class="py-1 dark:text-gray-400"><%= gem.description.to_s.truncate(50) %></p>
          </div>
          <div><a class="text-blue-400 hover:underline" href="<%= gem_path(gem.name) %>">Read more</a></div>
        </div>
      </div>
    <% end %>
  </div>
</div>
