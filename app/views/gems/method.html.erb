<% title @method.title %>

<div class="">
  <%= render partial: "breadcrumb" %>

  <div class="grid grid-cols-4 gap-12">
    <div class="col-span-3">
      <%= render Layout::Heading.new(title: @target) %>
      <%= render MethodDetails.new(object: @method, parent: @target, gem: @gem) %>
    </div>

    <div class="col-span-1">
      <% if @target.is_a?(ClassDefinition) %>
        <%= render Superclass.new(superclass: @klass, gem: @gem, title: "Class") if @klass %>
        <%= render ModulesList.new(modules: @target.included_modules, title: "Included Modules", gem: @gem) if @target.included_modules.any? %>
        <%= render ModulesList.new(modules: @target.extended_modules, title: "Extended Modules", gem: @gem) if @target.extended_modules.any? %>
      <% end %>

      <%= render MethodsList.new(methods: @target.class_methods, gem: @gem, prefix: "Class") if @target.class_methods.any? %>
      <%= render MethodsList.new(methods: @target.instance_methods, gem: @gem, prefix: "Instance") if @target.instance_methods.any? %>
    </div>
  </div>
</div>
