<div class="">
  <%= render partial: "breadcrumb" %>

  <div class="grid grid-cols-4 gap-12">
    <% object = (@klass || @namespace) %>

    <div class="col-span-3">
      <%= render Layout::Heading.new(title: object) %>
      <%= render MethodDetails.new(object: @method, parent: object, gem: @gem) %>
    </div>

    <div class="col-span-1">
      <% if object.is_a?(ClassDefinition) %>
        <%= render Superclass.new(superclass: @klass, gem: @gem, title: "Class") if @klass %>
        <%= render ModulesList.new(modules: object.included_modules, title: "Included Modules", gem: @gem) if object.included_modules.any? %>
        <%= render ModulesList.new(modules: object.extended_modules, title: "Extended Modules", gem: @gem) if object.extended_modules.any? %>
      <% end %>

      <%= render MethodsList.new(methods: object.class_methods, gem: @gem, prefix: "Class") if object.class_methods.any? %>
      <%= render MethodsList.new(methods: object.instance_methods, gem: @gem, prefix: "Instance") if object.instance_methods.any? %>
    </div>
  </div>
</div>
