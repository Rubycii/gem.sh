<% title @namespace.title %>

<div class="grid grid-cols-4 gap-12">
  <div class="col-span-3">
    <%= render partial: "breadcrumb" %>

    <%= render Layout::Heading.new(title: @namespace) %>

    <div class="grid divide-y">
      <% @namespace.class_methods.each do |class_method| %>
        <%= render MethodDetails.new(object: class_method, parent: @namespace, gem: @gem) %>
      <% end %>

      <% @namespace.instance_methods.each do |instance_method| %>
        <%= render MethodDetails.new(object: instance_method, parent: @namespace, gem: @gem) %>
      <% end %>
    </div>
  </div>

  <div class="col-span-1">
    <%= render ModulesList.new(modules: @namespace.included_modules, title: "Included Modules", gem: @gem) if Array.wrap(@namespace.included_modules).any? %>
    <%= render ModulesList.new(modules: @namespace.extended_modules, title: "Extended Modules", gem: @gem) if Array.wrap(@namespace.extended_modules).any? %>
    <%= render ClassMethodsList.new(class_methods: @class_methods, gem: @gem) if @class_methods.any? %>
    <%= render InstanceMethodsList.new(instance_methods: @instance_methods, gem: @gem) if @instance_methods.any? %>
    <%= render ClassesList.new(classes: @classes, gem: @gem) if @classes.any? %>
  </div>
</div>
